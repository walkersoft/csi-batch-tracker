<Window x:Class="CSI.BatchTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:CSI.BatchTracker"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Title="BatchTRAX - Cedar Siding, Inc.">
    <StackPanel Orientation="Vertical">
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Close" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Batch Management">
                <MenuItem Header="_Receiving Session" InputGestureText="Ctrl+R"/>
                <MenuItem Header="Receiving _History" InputGestureText="Ctrl+H"/>
                <MenuItem Header="Individual _Batch History" InputGestureText="Ctrl+B"/>
            </MenuItem>
            <MenuItem Header="_People">
                <MenuItem Header="Batch _Operator Management" InputGestureText="Ctrl+O"/>
            </MenuItem>
        </Menu>

        <WrapPanel Orientation="Horizontal" Margin="5">
            <StackPanel Orientation="Vertical">
                <Label Content="Current Inventory" FontWeight="Bold"/>
                <DataGrid AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="False"
                          IsReadOnly="True"
                          MinHeight="180"
                          HorizontalContentAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Color Name" Width="150"/>
                        <DataGridTextColumn Header="Quantity" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Label Content="Average Usage (Last 30 days)" FontWeight="Bold"/>
                <DataGrid AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="False"
                          IsReadOnly="True"
                          MinHeight="180"
                          HorizontalContentAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Color Name" Width="150"/>
                        <DataGridTextColumn Header="Qty. Used" Width="80"/>
                        <DataGridTextColumn Header="Avg. Daily Usage" Width="130"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Rectangle VerticalAlignment="Stretch" Width="1" Stroke="Gray" Margin="5,0,5,0"/>
            </StackPanel>

            <StackPanel Orientation="Vertical">
                <Label Content="Implement Batch" FontWeight="Bold"/>
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="0,0,5,0">
                        <Label Content="Batch"/>
                        <ComboBox Width="160"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0,0,5,0">
                        <Label Content="Implementation Date &amp; Time"/>
                        <xceed:DateTimePicker Width="250"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0,0,5,0">
                        <Label Content="Implementing Operator"/>
                        <ComboBox Width="130"/>
                    </StackPanel>
                    <Button VerticalAlignment="Bottom" Width="100" Content="Commit Batch"/>
                </WrapPanel>

                <Label Content="Implementation Ledger (Last 30 days)" FontWeight="Bold"/>
                <DataGrid AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="False"
                          IsReadOnly="True"
                          MinHeight="280"
                          Margin="0,0,0,5"
                          VerticalScrollBarVisibility="Visible"
                          VerticalContentAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Color Name" Width="120"/>
                        <DataGridTextColumn Header="Batch Number" Width="150"/>
                        <DataGridTextColumn Header="Date Implemented" Width="170"/>
                        <DataGridTextColumn Header="Implementing Operator" Width="170"/>
                    </DataGrid.Columns>
                </DataGrid>
                <WrapPanel Orientation="Horizontal">
                    <Button Content="Return Selected Batch to Inventory" HorizontalAlignment="Left" Margin="0,0,5,0"/>
                    <Button Content="View History of Selected Batch" HorizontalAlignment="Left"/>
                </WrapPanel>
            </StackPanel>
        </WrapPanel>
    </StackPanel>
</Window>
